

<div class="container mt-3">
  <div class="row">
    <div class="col-sm-9">
      <h1><%= @place["name"] %></h1> 
    </div>
    <div class="col-sm-3 text-end">
      <% if @current_user != nil %>
        <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
      <% end %>
    </div>
  </div>
</div>

<div class="container row">
    <% if @current_user != nil %>
      <h2>My Posts</h2>
      <% for post in @posts %>
        <div class="col-md-4 col-sm-6">
          <h3><%= post["title"] %></h3>
          <h5><%= post["posted_on"] %></h5>
          <p><%= post["description"] %></p>
          <% if post.image.attached? %>
            <img src="<%= url_for(post.image) %>" class="img-fluid">
          <% else %>
            <img src="<%= post["image"] %>" class="img-fluid">
          <% end %>
        </div>
      <% end %>

    <% else %>
      <p>Login to see your posts!</p>

    <% end %>
</div>

<div class="container mt-4">
  <p>
    <a href="/places">Back to All Places</a>
  </p>
</div>